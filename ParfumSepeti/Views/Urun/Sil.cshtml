@model UrunSilVM

<form class="form" method="post">
    <h2>Ürün Sil</h2>

    <input asp-for="Id" hidden />

    <div class="group">
        <img class="border2 w90p as-c" src="~/@Model.KapakUrl" alt="kapak" />
    </div>

    <div class="group">
        <label>Başlık</label>
        <input type="text" value="@Model.Baslik" disabled />
    </div>

    <div class="group">
        <label>Model</label>
        <input type="text" value="@Model.Model" disabled />
    </div>

    <div class="group">
        <label>Kategori</label>
        <input type="text" value="@Model.Kategori" disabled />
    </div>

    <div class="group">
        <span>
            Bu ürün,
            <span class="text-l bold color-primary">
                @Model.IstekSayisi
            </span>kullanıcının
            istek listesinde!
        </span>
    </div>

    <div class="group">
        <span>
            Bu ürün,
            <span class="text-l bold color-primary">
                @Model.SepetSayisi
            </span>kullanıcının
            sepetinde!
        </span>
    </div>

    <div class="hbox-r500 jc-end gap4">
        <a asp-action="Listele" class="btn2 ph12">Geri Dön</a>
        <button class="btn-danger text-l ph48 pv4 order-r500-first"
                type="submit">
            Sil
        </button>
    </div>
</form>
